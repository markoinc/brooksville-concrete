---
interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { title, description, canonical = Astro.url.pathname } = Astro.props;
const siteUrl = 'https://brooksvilleconcrete-co.com';
const phone = '(352) 292-1499';
const phoneTel = '3522921499';
const currentYear = new Date().getFullYear();

// All service areas within 1 hour of Brooksville
const locations = [
  { name: 'Brooksville', slug: '/' },
  { name: 'Spring Hill', slug: '/locations/spring-hill/' },
  { name: 'Weeki Wachee', slug: '/locations/weeki-wachee/' },
  { name: 'Hernando Beach', slug: '/locations/hernando-beach/' },
  { name: 'Ridge Manor', slug: '/locations/ridge-manor/' },
  { name: 'Crystal River', slug: '/locations/crystal-river/' },
  { name: 'Inverness', slug: '/locations/inverness/' },
  { name: 'Homosassa', slug: '/locations/homosassa/' },
  { name: 'Citrus Hills', slug: '/locations/citrus-hills/' },
  { name: 'Beverly Hills', slug: '/locations/beverly-hills/' },
  { name: 'Dade City', slug: '/locations/dade-city/' },
  { name: 'Zephyrhills', slug: '/locations/zephyrhills/' },
  { name: 'Land O\' Lakes', slug: '/locations/land-o-lakes/' },
  { name: 'New Port Richey', slug: '/locations/new-port-richey/' },
  { name: 'Hudson', slug: '/locations/hudson/' },
  { name: 'Wesley Chapel', slug: '/locations/wesley-chapel/' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={`${siteUrl}${canonical}`}>
  
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={`${siteUrl}${canonical}`}>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <slot name="head" />
</head>
<body>
  <!-- Announcement Bar - Urgency -->
  <div class="announcement-bar">
    <strong>âš¡ Limited Availability:</strong> We're booking fast this season! <a href={`tel:${phoneTel}`}>Call now</a> to secure your spot.
  </div>

  <header>
    <div class="header-inner">
      <a href="/" class="logo">
        <img src="/images/logo.png" alt="Brooksville Concrete Co." class="logo-image" />
      </a>
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span><span></span><span></span>
      </button>
      <div class="header-right">
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/concrete-driveways/">Driveways</a></li>
            <li><a href="/concrete-patios/">Patios</a></li>
            <li><a href="/concrete-slabs/">Slabs</a></li>
            <li><a href="/stamped-concrete/">Stamped</a></li>
            <li><a href="/pole-barns/">Pole Barns</a></li>
            <li><a href="/about/">About</a></li>
            <li><a href="/contact/">Contact</a></li>
          </ul>
        </nav>
        <a href={`tel:${phoneTel}`} class="header-phone">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
          {phone}
        </a>
      </div>
    </div>
  </header>

  <slot />

  <footer>
    <div class="footer-grid">
      <div class="footer-col">
        <h4>Brooksville Concrete Co.</h4>
        <p class="footer-about">Your trusted local concrete contractors proudly serving Brooksville, Hernando County, and the greater Nature Coast region. Quality craftsmanship, honest pricing, and results that last.</p>
        <div class="footer-contact-item">
          <svg viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
          <a href={`tel:${phoneTel}`}>{phone}</a>
        </div>
        <div class="footer-contact-item">
          <svg viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
          <span>Brooksville, FL (Hernando County)</span>
        </div>
        <div class="footer-contact-item">
          <svg viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
          <span>Mon-Fri 7AM-6PM, Sat 8AM-4PM</span>
        </div>
      </div>
      <div class="footer-col">
        <h4>Our Services</h4>
        <ul>
          <li><a href="/concrete-driveways/">Concrete Driveways</a></li>
          <li><a href="/concrete-patios/">Concrete Patios</a></li>
          <li><a href="/concrete-slabs/">Concrete Slabs</a></li>
          <li><a href="/stamped-concrete/">Stamped Concrete</a></li>
          <li><a href="/pole-barns/">Pole Barn Slabs</a></li>
          <li><a href="/contact/">Free Estimates</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h4>Service Areas</h4>
        <ul>
          {locations.slice(0, 8).map(loc => (
            <li><a href={loc.slug}>{loc.name}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-col">
        <h4>More Areas</h4>
        <ul>
          {locations.slice(8).map(loc => (
            <li><a href={loc.slug}>{loc.name}</a></li>
          ))}
          <li><a href="/about/">About Us</a></li>
          <li><a href="/privacy/">Privacy Policy</a></li>
          <li><a href="/terms/">Terms of Service</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} Brooksville Concrete Co. All rights reserved. | Proudly serving Hernando County, FL</p>
      <div>
        <a href="/privacy/">Privacy</a>
        <a href="/terms/">Terms</a>
      </div>
    </div>
  </footer>

  <!-- Sticky Mobile CTA -->
  <div class="sticky-mobile-cta">
    <a href={`tel:${phoneTel}`}>
      <svg viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
      Call Now: {phone}
    </a>
  </div>

  <script>
    const toggle = document.querySelector('.mobile-menu-toggle');
    const headerRight = document.querySelector('.header-right');
    if (toggle && headerRight) {
      toggle.addEventListener('click', () => {
        headerRight.classList.toggle('active');
      });
    }
  </script>

  <style is:global>
    @import '../styles/global.css';
  </style>
</body>
</html>

<!-- Sticky Mobile CTA -->
<div class="fixed bottom-0 left-0 right-0 bg-teal-600 text-white py-3 px-4 flex items-center justify-center gap-3 md:hidden z-50 shadow-lg">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
  </svg>
  <a href="tel:+13522921499" class="font-bold">Tap to Call: (352) 292-1499</a>
</div>
